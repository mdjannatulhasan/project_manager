{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Rails: Start Development Server",
            "type": "shell",
            "command": "bin/dev",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "rails",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^=> Booting Puma",
                    "endsPattern": "^Use Ctrl-C to stop"
                }
            }
        },
        {
            "label": "Assets: Build CSS",
            "type": "shell",
            "command": "npm run build:css",
            "group": "build"
        },
        {
            "label": "Assets: Build JS",
            "type": "shell",
            "command": "npm run build",
            "group": "build"
        },
        {
            "label": "Assets: Watch CSS",
            "type": "shell",
            "command": "npm run build:css:watch",
            "group": "build",
            "isBackground": true
        },
        {
            "label": "Assets: Watch JS",
            "type": "shell",
            "command": "npm run build:watch",
            "group": "build",
            "isBackground": true
        }
    ]
}
