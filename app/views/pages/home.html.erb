<div class="container mx-auto p-8">
    <h1 class="text-3xl font-bold mb-8">Learning Rails Frontend Structure</h1>

    <!-- Stimulus Controller Counter -->
    <div
        data-controller="hello"
        data-hello-number-value="0"
        class="bg-gray-200 p-6 rounded-lg"
    >
        <h2 class="text-xl font-semibold mb-4">Counter Component</h2>
        <p>This teaches you Stimulus targets, actions, and values!</p>

        <div class="mt-4">
            <span class="text-4xl font-bold" data-hello-target="count">0</span>
        </div>

        <div class="mt-4 space-x-2">
            <button
                data-action="click->hello#increment"
                class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600"
            >
                +1
            </button>
            <button
                data-action="click->hello#decrement"
                class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600"
            >
                -1
            </button>
            <button
                data-action="click->hello#reset"
                class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600"
            >
                Reset
            </button>
        </div>
    </div>

    <!-- Advanced Task Manager Component -->
    <div
        data-controller="task-manager"
        data-task-manager-tasks-value="[]"
        data-task-manager-filter-value="all"
        class="mt-8 bg-white border border-gray-200 rounded-lg p-6 shadow-lg"
    >
        <h2 class="text-2xl font-bold mb-6 text-gray-800">
            Advanced Task Manager
        </h2>

        <!-- Task Input Form -->
        <form data-action="submit->task-manager#addTask" class="mb-6">
            <div class="flex gap-2">
                <input
                    data-task-manager-target="taskInput"
                    type="text"
                    placeholder="Add a new task..."
                    class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                    required
                />
                <button
                    type="submit"
                    class="bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 transition-colors"
                >
                    Add Task
                </button>
            </div>
        </form>

        <!-- Filter Buttons -->
        <div data-task-manager-target="filterButtons" class="mb-4 flex gap-2">
            <button
                data-action="click->task-manager#filterTasks"
                data-filter="all"
                class="px-4 py-2 rounded-lg border border-gray-300 hover:bg-gray-50 transition-colors"
            >
                All
            </button>
            <button
                data-action="click->task-manager#filterTasks"
                data-filter="active"
                class="px-4 py-2 rounded-lg border border-gray-300 hover:bg-gray-50 transition-colors"
            >
                Active
            </button>
            <button
                data-action="click->task-manager#filterTasks"
                data-filter="completed"
                class="px-4 py-2 rounded-lg border border-gray-300 hover:bg-gray-50 transition-colors"
            >
                Completed
            </button>
        </div>

        <!-- Task List -->
        <div data-task-manager-target="taskList" class="space-y-2 mb-4">
            <!-- Tasks will be rendered here by JavaScript -->
        </div>

        <!-- Task Count -->
        <div class="text-sm text-gray-600">
            <span data-task-manager-target="taskCount">0 tasks remaining</span>
        </div>
    </div>

    <!-- Asset Pipeline Demo -->
    <div class="mt-8 bg-blue-100 p-6 rounded-lg">
        <h2 class="text-xl font-semibold mb-4">Asset Pipeline Demo</h2>
        <p class="mb-2">✅ Tailwind CSS is working (see the styling above)</p>
        <p class="mb-2">✅ JavaScript bundling is working (see the console)</p>
        <p>✅ Stimulus controllers are connected</p>
    </div>
</div>
